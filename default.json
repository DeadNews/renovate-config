{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "dependencyDashboard": true,
  "description": "Default preset for use with DeadNews's repos",
  "extends": ["config:base"],
  "labels": ["deps"],
  "packageRules": [
    {
      "addLabels": ["main", "major"],
      "description": "One week stability period for major updates in Poetry main dependency group",
      "matchDepTypes": ["dependencies"],
      "matchManagers": ["poetry"],
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "7 days"
    },
    {
      "addLabels": ["github-actions"],
      "description": "Group all github-actions updates together in one PR",
      "groupName": "github actions",
      "matchManagers": ["github-actions"],
      "semanticCommitType": "ci"
    },
    {
      "addLabels": ["pre-commit"],
      "description": "Group all pre-commit updates together in one PR",
      "groupName": "pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "semanticCommitType": "ci"
    }
  ],
  "platformAutomerge": true,
  "pre-commit": {
    "enabled": true
  },
  "schedule": ["every 1 months on the second day of the month"],
  "semanticCommits": "enabled"
}
