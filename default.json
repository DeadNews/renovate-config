{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "dependencyDashboard": true,
  "description": "Default preset for use with DeadNews's repos",
  "extends": ["config:base"],
  "labels": ["deps"],
  "packageRules": [
    {
      "addLabels": ["main", "major"],
      "description": "One week stability period for major updates in Poetry main dependency group",
      "matchDepTypes": ["dependencies"],
      "matchManagers": ["poetry"],
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "Use ci semantic type for github deps",
      "matchPaths": [".github/workflows/**"],
      "semanticCommitType": "ci"
    }
  ],
  "platformAutomerge": true,
  "pre-commit": {
    "enabled": true
  },
  "semanticCommits": "enabled"
}
