{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "dependencyDashboard": true,
  "description": "Default preset for use with DeadNews's repos",
  "extends": ["config:base"],
  "labels": ["deps"],
  "packageRules": [
    {
      "addLabels": ["main"],
      "description": "3 days stability period for Poetry main-dependencies",
      "matchDepTypes": ["dependencies"],
      "matchManagers": ["poetry"],
      "minimumReleaseAge": "3 days",
      "schedule": ["before 9am on saturday"]
    },
    {
      "addLabels": ["dev"],
      "description": "Group all Poetry dev-dependencies updates together in one PR",
      "groupName": "dev-dependencies",
      "matchDepTypes": ["lint", "test", "docs"],
      "matchManagers": ["poetry"],
      "rangeStrategy": "bump"
    },
    {
      "addLabels": ["github-actions"],
      "description": "Group all github-actions updates together in one PR",
      "groupName": "github actions",
      "matchManagers": ["github-actions"],
      "semanticCommitType": "ci"
    },
    {
      "addLabels": ["pre-commit"],
      "description": "Group all pre-commit updates together in one PR",
      "groupName": "pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "semanticCommitType": "ci"
    }
  ],
  "platformAutomerge": true,
  "pre-commit": {
    "enabled": true
  },
  "schedule": ["before 9am on the last day of the month"],
  "semanticCommits": "enabled"
}
